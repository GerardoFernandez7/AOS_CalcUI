<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="369dp"
        android:layout_height="494dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnExponential"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="^"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />

            <Button
                android:id="@+id/btnOpen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="("
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text=")"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="รท"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="7"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="8"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="9"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnMult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="*"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="4"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="5"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="6"
                android:textColor="#89C1DA"
                android:textColorLink="#F1EEEE"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnSustraction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="-"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="1"
                android:textColor="#89C1DA"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="2"
                android:textColor="#89C1DA"
                android:textColorLink="#F1EEEE"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="3"
                android:textColor="#89C1DA"
                android:textColorLink="@color/white"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnPlus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="+"
                android:textColor="#A786E3"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:text="C"
                android:textColor="#FF0016"
                android:textColorLink="#F1EEEE"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="0"
                android:textColor="#89C1DA"
                android:textColorLink="#F1EEEE"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#6A1D3249"
                android:onClick="actionsButtons"
                android:text="."
                android:textColor="#89C1DA"
                android:textColorLink="#673AB7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnEqual"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="1"
                android:backgroundTint="#673AB7"
                android:onClick="actionsButtons"
                android:text="="
                android:textColor="@color/white"
                android:textSize="34sp"
                app:strokeColor="#673AB7" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:onClick="actionsButtons"
        android:textColor="#89C1DA"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.909"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>